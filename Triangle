

#include <iostream>

using namespace std;
void dortgen(){
    int en,boy;
   cout<<"Boy giriniz "<<endl;
   cin>>boy;
   cout<<"En giriniz "<<endl;
   cin>>en;

   for(int a=0; a<boy; a++){
       for(int b=0;b<en;b++)
       {
        cout<<"*";
       }
       cout<<endl;
   }
}   
void ucgen(){
    int boy;
   cout<<"Boy giriniz "<<endl;
    cin>>boy;
    //   for(int a=boy;a>0;a--) bu da alternatif 3gen bu sefer tersten başlıyor..Reverse triangle
   for(int a=1; a<=boy; a++){
       for(int b=0;b<a;b++)
       {
        cout<<"*";
       }
       cout<<endl;
   }
}   

int main()
{
   ucgen();
   dortgen();

}
